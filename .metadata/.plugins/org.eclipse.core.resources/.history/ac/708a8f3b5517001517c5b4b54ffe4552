public class Main {

	public static void main(String[] args) {
				
		Author a = new Author("Mesa Selimovic", "mesa@tvrjava.ba", Author.MALE);
		System.out.println(a);
		
		Book b = new Book("Tvrdjava", 15.60, a, 7);
		System.out.println(b);
		
		Book b1 = new Book("Palcica", 15.60, a, 12);
		Book b2 = new Book("Orlovi rano lete", 11.20, a, 16);
		Book b3 = new Book("Basta sljezove boje", 20.00, a, 34);
		Book b4 = new Book("Tresnjevacke tresnje", 10.99, a, 3);
		Book b5 = new Book("Segrt Hlapic", 6.60, a, 11);
		Book b6 = new Book("Magarece godine", 8.90, a, 8);
		
		Book[] books = {b1, b2, b3, b4, b5, b6};
		Library l = new Library("Cipelici", books);
		
		System.out.println(l);
	}

}
