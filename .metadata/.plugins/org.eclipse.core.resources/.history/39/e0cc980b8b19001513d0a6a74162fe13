package ba.bitcamp.homework_weekend5.task3and4;

import ba.bitcamp.homework_weekend5.task1.StoryCharacter;
import ba.bitcamp.homework_weekend5.task2.Event;
import ba.bitcamp.homework_weekend5.task2.Goal;

public class Main {

	public static void main(String[] args) {
		
		StoryCharacter enemy = new StoryCharacter("Villain", false, true);
		
		Goal goal = new Goal("Defeat", Goal.EASY, Event.DEFEAT, enemy);
		
		Protagonist hero = new Protagonist("Hero", false, true, goal);
		
		StoryCharacter sidekick1 = new StoryCharacter("Sidekick 1", true, true);
		StoryCharacter sidekick2 = new StoryCharacter("Sidekick 2", true, false);
		StoryCharacter sidekick3 = new StoryCharacter("Sidekick 3", true, true);
		
		try {
			hero.addAlly(sidekick1);
			hero.addAlly(sidekick2);
			hero.addAlly(sidekick3);			
		} catch (ArrayIndexOutOfBoundsException e) {
			System.out.println("No more allies allowed!");
		}
		
		hero.setEnemy(enemy);
		hero.attainGoal();

	}

}
