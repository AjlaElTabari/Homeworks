package homework_oop1_task1;

public abstract class Computer {
	private String name;
	private String macAddress;
	
	/**
	 * @param name
	 * @param macAdress
	 */
	public Computer(String name, String macAddress) {
		super();
		this.name = name;
		this.macAddress = macAddress;
	}

	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}

	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		this.name = name;
	}

	/**
	 * @return the macAdress
	 */
	public String getMacAdress() {
		return macAddress;
	}

	/**
	 * @param macAdress the macAdress to set
	 */
	public void setMacAdress(String macAddress) {
		if(macAddress.length() != 12) {
			System.out.println("MAC addres you enterd is not valid!");
		} else {
			this.macAddress = macAddress;
		}		
	}
	
	
}
