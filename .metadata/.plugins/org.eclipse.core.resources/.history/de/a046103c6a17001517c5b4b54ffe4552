package ba.bitcamp.homework_stringbuilder.task3;

public class Date {
	private static final int DEFAULT_MONTH_AND_YEAR = 1;
	private int day;
	private int month;
	private int year;
	
	/**
	 * @param day
	 * @param month
	 * @param year
	 */
	public Date(int day, int month, int year) {
		super();
		this.day = day;
		this.month = month;
		this.year = year;
	}

	/**
	 * @param day
	 * @param month
	 */
	public Date(int day, int month) {
		this(day, month, DEFAULT_MONTH_AND_YEAR);
	}

	/**
	 * @param day
	 */
	public Date(int day) {
		this(day, DEFAULT_MONTH_AND_YEAR, DEFAULT_MONTH_AND_YEAR);
	}
	
	private boolean validateMonth() {
		return (this.month > 0 && this.month <= 12) ? true : false;
	}
	
	private boolean validateDay() {
		if(this.day > 0 && this.day < 29) {
			return true;
		} else 
	}
	
	
	
}
