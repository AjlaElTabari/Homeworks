package ba.bitcamp.edvin.zadaca01;

import java.util.Arrays;

public class BookStore {

	private String bookStoreName;
	private Book[] books;

	public BookStore() {
	}

	public String getBookStoreName() {
		return bookStoreName;
	}

	public void setBookStoreName(String bookStoreName) {
		this.bookStoreName = bookStoreName;
	}

	public Book[] getBooks() {
		return books;
	}

	public void setBooks(Book[] books) {
		this.books = books;
	}

	public int sellBook(Book book, int num) {
		for (int i = 0; i < books.length; i++) {

			if (book.getStock() - num > 0 || book.getStock() - num == 0) {
				book.setStock(book.getStock() - num);
				return book.getStock();
			} else if (book.getStock() - num < 0) {
			}
			return book.getStock();
		}
		return 0;
	}

	public String getBooksByAuthor(String nameOfAuthor) {
		String s = " ";
		for (int i = 0; i < books.length; i++) {
			if (books[i].getName().equals(nameOfAuthor)) {
				s += books[i].getBookName() + "\n";
			}
		}
		return s;
	}

	public String toString() {
		String s = " ";
		s += "Name of Book Store: " + bookStoreName + "\n";
		s += Arrays.toString(books);
		return s;
	}

}
