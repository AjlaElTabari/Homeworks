package homework_classes;

public class Rectangle {
	private double shorterSide;
	private double largerSide;

	/**
	 * Constructor
	 * 
	 * @param sideA
	 *            - First side of rectangle
	 * @param sideB
	 *            - Second side of rectangle
	 */
	public Rectangle(double shorterSide, double largerSide) {
		try {
			// Checking if the inputed value of rectangle sides are higher than
			// zero, if not throwing exception
			if (shorterSide > 0 && largerSide > 0) {
				this.shorterSide = shorterSide;
				this.largerSide = largerSide;
			} else {
				throw new IllegalArgumentException();
			}
		} catch (IllegalArgumentException e) {
			System.out
					.println("You have inputed negative value or zero for a sides of rectangle! Please input value higher that 0!\n");
		}
	}

	/**
	 * Prints information about rectangle.
	 */
	public String toString() {
		return String
				.format("Side A is: %f\nSide B is: %f\nArea is: %f\nPerimeter is: %f\n",
						shorterSide, largerSide, getArea(), getPerimeter());
	}

	/**
	 * Calculates the area of the rectangle.
	 * 
	 * @return - The area of the rectangle.
	 */
	public double getArea() {
		return shorterSide * largerSide;
	}

	/**
	 * Calculates the perimeter of the rectangle. Perimeter represents the sum
	 * of all lines of the rectangle.
	 * 
	 * @return The perimeter of the rectangle.
	 */
	public double getPerimeter() {
		return 2 * (shorterSide + largerSide);
	}

	/*
	 * Get methods
	 */
	public double getshorterSide() {
		return shorterSide;
	}

	public double getlargerSide() {
		return largerSide;
	}
}
