package ba.bitcamp.homework_weekend5.task3and4;

import ba.bitcamp.homework_weekend5.task1.StoryCharacter;
import ba.bitcamp.homework_weekend5.task2.Event;
import ba.bitcamp.homework_weekend5.task2.Goal;

public class Main {

	public static void main(String[] args) {
		
		StoryCharacter eve = new StoryCharacter("EVE", true, true);

		Goal goal = new Goal("Clean up the mess.", Goal.HARD, Event.LOVE, eve);

		Protagonist wallE = new Protagonist("WALL-E", false, true, goal);
		
		
		StoryCharacter cockroach = new StoryCharacter("Cockroach", false, true);
		StoryCharacter plant = new StoryCharacter("Valuable plant", true, false);

		StoryCharacter princeCharming = new StoryCharacter("Prince Charming", true, false);

		wallE.addAlly(eve);
		wallE.addAlly(cockroach);
		wallE.addAlly(plant);
		
		
		wallE.attainGoal();
	}

}
