package ba.bitcamp.homework_weekend5.task3and4;

import ba.bitcamp.homework_weekend5.task1.Character;
import ba.bitcamp.homework_weekend5.task2.Event;
import ba.bitcamp.homework_weekend5.task2.Goal;

public class Main {

	public static void main(String[] args) {
		Character enemy = new Character("Villain", false, true);
		
		Goal goal = new Goal("Defeat", Goal.EASY, Event.DEFEAT, enemy);
		
		Protagonist hero = new Protagonist("Hero", "male", true, goal);
		
		Character sidekick1 = new Character("Sidekick 1", true, true);
		Character sidekick2 = new Character("Sidekick 2", "true", false);
		Character sidekick3 = new Character("Sidekick 3", "true", true);
		
		try {
			hero.addCharacter(sidekick1);
			hero.addCharacter(sidekick2);
			hero.addCharacter(sidekick3);			
		} catch (OperationNotSupportedException e) {
			System.out.println("Can not add more characters.");
		}
		
		hero.setOpponent(opponent);
		hero.attainGoal();

	}

}
